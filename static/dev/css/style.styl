*
    box-sizing border-box

.content
    margin-top 20px
    padding 30px

.form-wrapper
    width 500px
    margin 30px auto
    padding 30px

.with-aside
    width 650px
    margin-top 0
    padding-top 10px

input[type="text"]:focus,
input[type="email"]:focus,
input[type="password"]:focus,
textarea:focus
    border-bottom 4px solid #4285f4

header
    background #fff
    height 50px
    box-shadow 0px 0px 2px 2px #ddd
    margin-bottom 25px

    .logo
        line-height 50px
        font-size 17px
        font-weight bold
        color #424242

        &:hover
            text-decoration none

    ul li
        float right
        display block
        height 50px
        line-height 50px

        a
            display block
            width 100%
            height 100%
            padding-left 20px
            padding-right 20px
            transition all .3s ease-in-out
            border-bottom 0 solid #4285f4

            &:hover
                text-decoration none
                border-bottom 5px solid #4285f4


.profile
    padding 0
    padding-bottom 20px
    margin-top 20px

    img
        width 100%

    .profile-content
        padding 10px 30px

        h3
            margin-bottom 30px

        ul
            list-style none
            padding 0

            li
                margin-bottom 30px
                font-size 12px

                h4
                    font-size 16px
                    font-size 14px

.thumbnail
    width 90px
    margin-right 10px

.label
    margin-right 5px

.about
    margin-top 20px
    padding 10px
    border-radius 2px
    background #ebebeb
    color #4f4f4f
    margin-bottom 30px

.foreign-photo
    width 100%
    margin-bottom 10px

.follow,
.stop-following
    width 100%
    border-radius 2px

    &:focus
        outline none

.follow
    color #fff
    background #4285f4;

    &:focus
        color #fff

    &:hover
        color #fff


.stop-following
    background #dfdfdf

.small-fol
    margin-bottom 8px

    img
        margin: 0
        width 30px
        margin-right 10px

.btn

    &:focus
        outline none

.btn-default

    background #ddd

    &:focus
        outline none

    span
        color #666

    .messages-counter
        display inline-block
        width 20px
        background #8a8a8a
        color #ddd
        border-radius 50%

.btn-success
    span
        color #fff

    .messages-counter
        display inline-block
        width 20px
        background #fff
        color #65b045
        border-radius 50%

.btn-success

    &:focus
        outline none
        background #65b045
        border-color #65b045


.message
    background #caf7fe
    padding 15px

    p
        border 0px solid red

#messages-container

    h4
        margin-bottom 0

#messages-container

    .panel-heading
        padding-bottom 0
        border-bottom-width 0

    .full
        min-height 50px

#messages-container .panel-default
    background-color #edeaea

#messages-container .unread
    background-color rgba(#fcff6b, 1) !important

.pull-right
    margin-left 10px
    cursor pointer

.read-link
    display inline-block
    margin-top 10px
    cursor pointer

.message-author
    font-size 18px !important

.message-form-container

    .send-message-btn
        display block
        margin-top 5px
        width 100%

    .message-form
        left 50%-250px
        top 150px
        display none
        position absolute
        position fixed
        width 500px
        padding 20px
        z-index 10
        background #e4e4e4
        box-shadow 0 0 0 1000px rgba(0, 0, 0, 0.57)
        border-radius 3px

    textarea
        display block
        width 100%
        min-height 70px
        margin-bottom 15px
        padding 10px
        color #777

    .opened
        display block

.messages-count
    background rgb(79, 110, 251)
    padding 2px
    padding-left 4px
    padding-right 4px
    color #fff
    border-radius 3px
    font-weight bold
    font-size 12px

.decision

    h4
        padding 20px
        margin-bottom 0
        background #dddddd
        position relative

        button
            position absolute
            top 32px
            right 30px
            display block
            height 50px
            width 50px
            line-height 50px
            text-align center
            border-radius 50%
            background #f04d22
            color #fff
            box-shadow 0 0 0 #fff
            border 0px solid red
            transition background .4s ease-in-out, box-shadow .4s ease-in-out

            &:hover
                background #d73434
                box-shadow 0 2px 2px #333;

    .decision-content
        padding 20px 20px
        background #e7e7e7

    .choices-list
        margin-top 25px

        .choice
            margin-bottom 15px

            .vote-link

                a
                    margin-right 5px
                    cursor pointer

                .not-active
                    color #717171
                    cursor default

                span
                    color #878585
                    font-weight bold
                    border-radius 4px

        .indicator
            height 20px
            width 150px
            border-radius 3px
            background #269ef5

.decision
    position relative

    .cancel-vote
        position absolute
        top 28px
        right 30px

.decision-creation-form

    padding-left 15px
    margin-bottom 40px

    input,
    textarea
        display block
        width 400px
        margin-bottom 15px
        padding 10px
        border-radius 2px
        border 1px solid #c3c3c3
        background #f2eded

        &:focus
            outline none
            border 1px solid #4285f4
            border-bottom 4px solid #4285f4

.add-more-btn
    margin-right 10px

.decisions-heading
    padding-left 15px
