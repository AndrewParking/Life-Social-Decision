*
    box-sizing border-box

.content
    margin-top 20px
    padding 30px

.form-wrapper
    width 500px
    margin 30px auto
    padding 30px

.with-aside
    width 650px
    margin-top 0
    padding-top 10px

input[type="text"]:focus,
input[type="email"]:focus,
input[type="password"]:focus,
textarea:focus
    border-bottom 4px solid #4285f4

header
    background #fff
    height 50px
    box-shadow 0px 0px 2px 2px #ddd
    margin-bottom 25px

    .logo
        line-height 50px
        font-size 17px
        font-weight bold
        color #424242

        &:hover
            text-decoration none

    ul li
        float right
        display block
        height 50px
        line-height 50px

        a
            display block
            width 100%
            height 100%
            padding-left 20px
            padding-right 20px
            transition all .3s ease-in-out
            border-bottom 0 solid #4285f4

            &:hover
                text-decoration none
                border-bottom 5px solid #4285f4


.profile
    padding 0
    padding-bottom 20px
    margin-top 20px

    img
        width 100%

    .profile-content
        padding 10px 30px

        h3
            margin-bottom 30px

        ul
            list-style none
            padding 0

            li
                margin-bottom 30px
                font-size 12px

                h4
                    font-size 16px
                    font-size 14px

.thumbnail
    width 90px
    margin-right: 10px

.label
    margin-right 5px

.about
    margin-top 20px
    padding 10px
    border-radius 2px
    background #ebebeb
    color #4f4f4f

.foreign-photo
    width 100%
    margin-bottom 10px

.follow,
.stop-following
    width 100%
    border-radius 2px

    &:focus
        outline none

.follow
    color #fff
    background #4285f4;

    &:focus
        color #fff

    &:hover
        color #fff


.stop-following
    background #dfdfdf
